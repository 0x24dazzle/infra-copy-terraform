# Resource Group Configuration
resource_group_name = "rg-example-terraform"
location            = "eastus"

# Virtual Network Configuration
vnet_name           = "vnet-example"
vnet_address_space  = ["10.0.0.0/16"]

# PostgreSQL Subnet Configuration
postgresql_subnet_name              = "snet-postgresql"
postgresql_subnet_address_prefixes  = ["10.0.1.0/24"]
postgresql_nsg_name                 = "nsg-postgresql"
allowed_source_address_prefix       = "10.0.0.0/16"

# Service Bus Configuration
servicebus_namespace_name           = "sb-example-namespace"
servicebus_sku                      = "Standard"
servicebus_queue_name               = "sb-example-queue"
servicebus_queue_enable_partitioning = false

# PostgreSQL Server Configuration
postgresql_server_name              = "psql-example-server"
postgresql_version                  = "14"
postgresql_admin_login              = "psqladmin"
postgresql_admin_password           = "ExamplePassword123!"
postgresql_zone                     = "1"
postgresql_backup_retention_days    = 7
postgresql_geo_redundant_backup_enabled = false
postgresql_sku_name                 = "GP_Standard_D2s_v3"
postgresql_storage_mb               = 32768

# PostgreSQL Private DNS Configuration
postgresql_private_dns_zone_name              = "postgres.database.azure.com"
postgresql_private_dns_zone_vnet_link_name    = "postgresql-dns-link"

# PostgreSQL Database Configuration
postgresql_database_name    = "exampledb"
postgresql_database_charset = "UTF8"
postgresql_database_collation = "en_US.utf8"

# Tags
tags = {
  Environment = "Development"
  Project     = "Example"
  ManagedBy   = "Terraform"
}

